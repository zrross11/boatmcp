{% if multi_stage %}
FROM golang:{{ go_version }}-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o main .

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/main .

EXPOSE {{ port }}

CMD ["./main"]
{% else %}
{% extends "base.dockerfile.j2" %}

{% block setup %}
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -o main .
{% endblock %}

{% block command %}
CMD ["./main"]
{% endblock %}
{% endif %}
